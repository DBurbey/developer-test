@model OrangeBricks.Web.Controllers.Offers.ViewModels.OffersFromBuyerViewModel

@{
    ViewBag.Title = "My Offers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    int propertyId = 0;
}

<h2>@ViewBag.Title</h2>

<p>Here you can see the offers you have made.</p>


@if (Model.Offers.Count > 0)
{


    foreach (var offer in Model.Offers)
    {
        <div class="row">
            @if (offer.PropertyId != propertyId) {
            <hr/>
            <div class="col-md-6">
                <p><strong>Property type:</strong> @offer.PropertyType</p>
                <p><strong>Number of bedrooms:</strong> @offer.NumberOfBedrooms</p>
                <p><strong>Street name:</strong> @offer.StreetName</p>
            </div>
            }
            @if (offer.PropertyId == propertyId) {
                <div class="col-md-6"></div>
            }
            <div class="col-md-6">
                <p><strong>Offer Amount: </strong> £@offer.Amount</p>
                <p><strong>Offer Made At: </strong> @offer.CreatedAt.ToLongTimeString() on @offer.CreatedAt.ToShortDateString()</p>
                <p><strong>Status: </strong> @offer.Status</p>
            </div>
        </div>
        { propertyId = offer.PropertyId; }
    }
}
else
{
    <div class="alert alert-info" role="alert">
        You have made no offers!
    </div>
}
